{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
